---
const nav = [
  { href: "#leistungen",  label: "Leistungen" },
  // { href: "#preise",      label: "Preise" },
  { href: "#galerie",     label: "Galerie" },
  // { href: "#bewertungen", label: "Bewertungen" },
  { href: "#kontakt",     label: "Kontakt" },
];
---

<!-- Banner/Logo (scrollt mit) -->
<header class="relative z-40">
  <a href="/" class="block w-full" aria-label="Startseite">
    <img
      src="/logo-bg-green.png"
      alt="Fensterputzer A&G"
      width="2127"
      height="882"
      class="block w-full h-auto select-none"
      decoding="async"
      loading="eager"
      fetchpriority="high"
      draggable="false"
    />
  </a>
</header>

<!-- Sticky Navigation (ohne Burger-MenÃ¼) -->
<div class="sticky top-0 z-50 border-b border-slate-200/70 bg-white/90 backdrop-blur">
  <div class="mx-auto max-w-6xl px-4">
    <div class="flex h-14 items-center justify-between gap-3">
      <a href="/" class="flex items-center min-w-0" aria-label="Startseite">
        <img
          src="/logo.png"
          alt="Fensterputzer A&G"
          width="160"
          height="48"
          class="h-8 w-auto select-none"
          decoding="async"
          loading="lazy"
          draggable="false"
        />
      </a>

      <nav class="flex items-center gap-4 text-sm text-slate-700">
        {nav.map((n) => (
          <a href={n.href} class="hover:text-slate-900">{n.label}</a>
        ))}
      </nav>
    </div>
  </div>
</div>
