---
const nav = [
  { href: "#leistungen", label: "Leistungen" },
  { href: "#preise",     label: "Preise" },
  { href: "#galerie",    label: "Galerie" },
  { href: "#bewertungen",label: "Bewertungen" },
  { href: "#kontakt",    label: "Kontakt" },
];
---
<header class="sticky top-0 z-50 border-b border-slate-200/70 bg-white/80 backdrop-blur dark:border-slate-800/60 dark:bg-slate-950/80">
  <div class="mx-auto max-w-6xl px-4">
    <div class="flex items-center justify-between h-14">
      <!-- Logo/Brand (später evtl. SVG/Logo) -->
      <a href="/" class="font-semibold tracking-tight text-slate-900 dark:text-slate-100">
        Fenster&shy;reinigung<span class="text-blue-600">Nord</span>
      </a>

      <!-- Desktop-Navigation -->
      <nav class="hidden md:flex items-center gap-6 text-sm text-slate-700 dark:text-slate-300">
        {nav.map((n) => (
          <a href={n.href} class="hover:text-slate-900 dark:hover:text-white">{n.label}</a>
        ))}
        <a href="tel:+4917629633132"
           class="inline-flex items-center rounded-lg bg-blue-600 px-4 py-2 font-medium text-white hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-600 focus:ring-offset-2 focus:ring-offset-white dark:focus:ring-offset-slate-900">
          Anrufen
        </a>
      </nav>

      <!-- Mobile: Details/summary ohne JS -->
      <details class="md:hidden">
        <summary class="list-none cursor-pointer rounded px-2 py-1.5 border border-slate-300 text-sm text-slate-700 hover:bg-slate-50 dark:border-slate-700 dark:text-slate-200 dark:hover:bg-slate-800">
          Menü
        </summary>
        <div class="mt-2 rounded border border-slate-200 bg-white p-2 shadow-lg dark:border-slate-800 dark:bg-slate-900">
          <nav class="flex flex-col">
            {nav.map((n) => (
              <a href={n.href} class="rounded px-2 py-2 text-sm text-slate-700 hover:bg-slate-100 dark:text-slate-200 dark:hover:bg-slate-800">{n.label}</a>
            ))}
            <a href="tel:+4917629633132"
               class="mt-1 rounded px-2 py-2 text-sm font-medium text-white bg-blue-600 hover:bg-blue-700">
              Anrufen
            </a>
          </nav>
        </div>
      </details>
    </div>
  </div>
</header>
