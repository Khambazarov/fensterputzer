---
import "../styles/global.css";
import Header from "../components/Header.astro";
const {
  title = "Fensterreinigung Hamburg & Norderstedt – [Name]",
  description = "Professionelle Fensterreinigung für privat & gewerblich in Hamburg und Norderstedt. Schnell, sauber, fair.",
} = Astro.props;
const canonical = Astro.url?.href ?? "/";
---
<!doctype html>
<html lang="de">
  <head></head>
  <body class="min-h-screen bg-white text-slate-900">
    <a href="#main" class="sr-only focus:not-sr-only focus:absolute focus:top-2 focus:left-2 focus:px-3 focus:py-2 focus:bg-yellow-200 focus:text-black rounded">
      Zum Inhalt springen
    </a>

    <Header />

    <div class="mx-auto max-w-6xl px-4">
      <main id="main">
        <slot />
      </main>
    </div>
  </body>
</html>
