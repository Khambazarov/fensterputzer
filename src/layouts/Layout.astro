---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";  // <-- neu
const { title = "Fensterreinigung Hamburg & Norderstedt – [Name]", description = "Professionelle Fensterreinigung für privat & gewerblich in Hamburg und Norderstedt. Schnell, sauber, fair." } = Astro.props;
const canonical = Astro.url?.href ?? "/";
---

<!doctype html>
<html lang="de">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonical} />

    <!-- Author -->
    <meta name="author" content="Renat Khambazarov" />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonical} />
    <meta property="og:image" content="/og-image.jpg" />
    <meta name="twitter:card" content="summary_large_image" />

    <!-- Theme color (Wir fügen später den Toggle hinzu) -->
    <meta name="theme-color" content="#ffffff" />

    <!-- JSON-LD Hook (Platzhalter; füllen wir später) -->
    <script type="application/ld+json">
      {JSON.stringify({
        "@context":"https://fensterputzer.netlify.app",
        "@type":"LocalBusiness",
        name:"Fensterputzer A&G",
        url: canonical,
        telephone:"+4917629633132",
        address:{ "@type":"PostalAddress", addressLocality:"Norderstedt", postalCode:"22846", addressCountry:"DE" },
        areaServed:["Hamburg","Norderstedt"]
      })}
    </script>
  </head>
  <body class="min-h-screen bg-white text-slate-900">
    <a href="#main" class="sr-only focus:not-sr-only focus:absolute focus:top-2 focus:left-2 focus:px-3 focus:py-2 focus:bg-yellow-200 focus:text-black rounded">
      Zum Inhalt springen
    </a>

    <Header />

    <div class="mx-auto max-w-6xl px-4">
      <main id="main">
        <slot />
      </main>
      <Footer />
    </div>
  </body>
</html>
